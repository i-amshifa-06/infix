import pandas as pd
from sklearn.model_selection import train_test_split
from sklearn.linear_model import LinearRegression, LogisticRegression
from sklearn.metrics import r2_score, accuracy_score

# Load dataset (make sure diabetes.csv is in same folder)
df = pd.read_csv("diabetes.csv")

# ---------- Linear Regression (BMI → Glucose) ----------
X = df[['BMI']]
y = df['Glucose']
x_train, x_test, y_train, y_test = train_test_split(X, y, test_size=0.2)
lr = LinearRegression()
lr.fit(x_train, y_train)
print("Linear Regression R2 Score =", r2_score(y_test, lr.predict(x_test)))

# ---------- Logistic Regression (BMI → Diabetes Yes/No) ----------
X = df[['BMI']]
y = df['Outcome']
x_train, x_test, y_train, y_test = train_test_split(X, y, test_size=0.2)
log = LogisticRegression()
log.fit(x_train, y_train)
print("Logistic Regression Accuracy =", accuracy_score(y_test, log.predict(x_test)))
